<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlashCardScreen">

    <TextView
        android:id="@+id/secondNum"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="88dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnToGenerateGame"
        android:layout_width="272dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="36dp"
        android:padding="5dp"
        android:text="@string/generate_10_random_problems" />

    <TextView
        android:id="@+id/firstNum"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/divisionSymbol"
        android:layout_width="67dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="239dp"
        android:layout_marginEnd="268dp"
        android:layout_marginBottom="145dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/yourAnswerTextView"
        android:layout_width="105dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="274dp"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:text="Your Answer:"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/answerInput"
        android:layout_width="115dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="423dp"
        android:layout_marginEnd="141dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnToCheckAnswer"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="291dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="349dp"
        android:padding="5dp"
        android:text="Submit" />

    <TextView
        android:id="@+id/ResultsTextView"
        android:layout_width="126dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="151dp"
        android:layout_marginTop="489dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="245dp"
        android:gravity="center"
        android:textStyle="bold" />
</RelativeLayout>
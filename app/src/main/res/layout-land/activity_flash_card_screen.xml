<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlashCardScreen">

    <TextView
        android:id="@+id/secondNum"
        android:layout_width="154dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="481dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="88dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnToGenerateGame"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="408dp"
        android:layout_marginBottom="36dp"
        android:padding="5dp"
        android:text="@string/generate_10_random_problems" />

    <TextView
        android:id="@+id/firstNum"
        android:layout_width="154dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="481dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/divisionSymbol"
        android:layout_width="73dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="389dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="269dp"
        android:layout_marginBottom="145dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/yourAnswerTextView"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_below="@+id/btnToGenerateGame"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="528dp"
        android:gravity="center"
        android:text="Your Answer:"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/answerInput"
        android:layout_width="166dp"
        android:layout_height="58dp"
        android:layout_below="@+id/btnToGenerateGame"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="247dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="318dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnToCheckAnswer"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="462dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="122dp"
        android:padding="5dp"
        android:text="Submit" />

    <TextView
        android:id="@+id/ResultsTextView"
        android:layout_width="174dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="517dp"
        android:layout_marginBottom="245dp"
        android:gravity="center"
        android:textStyle="bold" />
</RelativeLayout>